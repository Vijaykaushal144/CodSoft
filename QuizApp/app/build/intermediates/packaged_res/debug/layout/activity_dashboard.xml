<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/quiz_app"
    tools:context=".DashboardActivity">
    <RelativeLayout
        android:background="#636FAE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/ic_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/white"/>


    </RelativeLayout>

<!--    <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar-->
<!--        android:id="@+id/progress_bar_1"-->
<!--        style="?android:attr/progressBarStyleHorizontal"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:indeterminate="false"-->
<!--        android:maxHeight="12dp"-->
<!--        android:minHeight="12dp"-->
<!--        android:progress="40"-->
<!--        app:backgroundColor="@color/green_light"-->
<!--        app:progressColor="@color/green"/>-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:orientation="vertical">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_100sdp"
           app:cardCornerRadius="@dimen/_20sdp"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginEnd="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_5sdp"
           android:layout_marginBottom="@dimen/_20sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/card_question"
               android:textColor="@color/black"
               android:text="@string/quizz_app"
               android:layout_gravity="center"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/card_optA"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginEnd="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_20sdp"
           android:layout_marginBottom="@dimen/_20sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/card_optionA"
               android:textColor="@color/black"
               android:text="Option A"
               android:layout_gravity="center"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/card_optB"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginEnd="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_20sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/card_optionB"
               android:textColor="@color/black"
               android:text="OptionB"
               android:layout_gravity="center"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/card_optC"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginEnd="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_20sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/card_optionC"
               android:textColor="@color/black"
               android:text="Option C"
               android:layout_gravity="center"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/card_optD"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           app:cardCornerRadius="@dimen/_10sdp"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginEnd="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_20sdp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/card_optionD"
               android:textColor="@color/black"
               android:text="Option D"
               android:layout_gravity="center"
               />
       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_50sdp"
           android:gravity="center"
           android:background="@drawable/next_btn_shape"
           android:layout_marginStart="@dimen/_35sdp"
           android:layout_marginRight="@dimen/_35sdp"
           android:layout_marginLeft="@dimen/_35sdp"
           android:layout_marginEnd="@dimen/_35sdp"
           android:layout_marginTop="@dimen/_10sdp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Next"
               android:textAllCaps="true"
               android:textSize="@dimen/_25sdp"
               android:textColor="@color/white"/>
       </LinearLayout>
   </LinearLayout>


</LinearLayout>